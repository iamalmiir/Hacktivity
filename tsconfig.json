{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,

    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["libs/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
